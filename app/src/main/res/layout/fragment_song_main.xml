<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/us_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LeeRoyJankins"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/bt_change"
        app:layout_constraintTop_toTopOf="@+id/bt_change" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Write Username"
        android:textColor="#857C7C"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bt_change"
        app:layout_constraintTop_toTopOf="@+id/bt_change" />


    <Button
        android:id="@+id/bt_change"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:text="Change User"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_apply"
        android:layout_width="133dp"
        android:layout_height="36dp"
        android:text="Apply"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_albumCover"
        android:layout_width="394dp"
        android:layout_height="323dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_change"
        app:srcCompat="@drawable/albumart" />

    <TextView
        android:id="@+id/tv_songTitle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="30sp"
        android:text="CADILLACTICA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_albumCover" />

    <TextView
        android:id="@+id/tv_artName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="Big K.R.I.T."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_songTitle" />

    <TextView
        android:id="@+id/tv_numPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="numplay"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_artName" />


    <ImageButton
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/ic_previous"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_numPlay" />

    <ImageButton
        android:id="@+id/bt_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/ic_play"
       android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/btShuffle"
        app:layout_constraintEnd_toStartOf="@+id/tv_forward"
        app:layout_constraintStart_toEndOf="@+id/tv_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_numPlay"
        tools:ignore="NotSibling" />

    <ImageButton
        android:id="@+id/tv_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:foreground="?selectableItemBackground"
        android:onClick="goForward"
        android:src="@drawable/ic_next"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_play"
        app:layout_constraintTop_toBottomOf="@+id/tv_numPlay" />


</androidx.constraintlayout.widget.ConstraintLayout>
