<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UltimMain2Activity"
>


    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/tvsongshow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
    <Button
        android:id="@+id/btShuffle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Shuffle"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvsongshow"
        app:layout_constraintTop_toBottomOf="@+id/fragContainer" />

    <TextView
        android:id="@+id/tvsongshow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:foreground="?selectableItemBackground"
        android:maxLines="1"
        android:paddingTop="15dp"
        android:text="TextView"
        android:paddingBottom="15dp"
        android:textColor="#000000"

        android:textSize="18sp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btShuffle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragContainer"/>

</androidx.constraintlayout.widget.ConstraintLayout>